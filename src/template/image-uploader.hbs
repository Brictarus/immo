<td class="col-md-1 col-xs-2 col-sm-1 photo-favourite-radio">
  {{#if model.id}}
    <input type="radio" name="favourite-pic" value="{{model.id}}" {{ifinline model.favorite "checked"}} />
  {{/if}}
</td>
<td class="col-md-1 col-xs-3 col-sm-2 photo-thumbnail">
  {{#if model.id}}
    <img src="data/thumbnails/{{model.id}}.{{model.extension}}"/>
  {{/if}}
</td>
<td class="col-md-5 photo-name">{{model.nom}}</td>
<td class="col-md-5 photo-progress">
  <div class="progress">
    <div class="progress-bar {{ifequalsinline progress 100 "progress-bar-success"}}" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: {{progress}}%;">
      {{progress}}%
    </div>
  </div>
</td>
<td class="col-md-1">
  {{#if model.id}}
    <span class="glyphicon glyphicon-remove photo-remove" aria-hidden="true"></span>
  {{/if}}
</td>